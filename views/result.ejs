<section class="center-wrap">

  <div class="glass weather-card">
    <div class="header-row">
      <div>
        <h2 class="place"><%= location %></h2>
        <div class="localtime">Local time: <%= localtime %></div>
      </div>
      <div class="actions-right">
        <a href="/" class="btn mini">ğŸ” New Search</a>
      </div>
    </div>

    <div class="main-row">
      <div class="left">
        <img class="icon big floating" src="https:<%= current.condition.icon %>" alt="icon" />
        <div class="temp"><%= current.temp_c %>Â°C</div>
        <div class="cond"><%= current.condition.text %></div>
        <div class="small-stats">
          <span>Feels: <strong><%= current.feelslike_c %>Â°C</strong></span>
          <span>Wind: <strong><%= current.wind_kph %> kph</strong></span>
          <span>Humidity: <strong><%= current.humidity %>%</strong></span>
        </div>
      </div>

      <div class="right">
        <div class="sun">
          <% if (forecast && forecast[0]) { %>
            <div>Sunrise: <strong><%= forecast[0].astro.sunrise %></strong></div>
            <div>Sunset: <strong><%= forecast[0].astro.sunset %></strong></div>
          <% } %>
        </div>

        <div class="chart-wrap glass small">
          <canvas id="tempChart" width="400" height="220"></canvas>
        </div>
      </div>
    </div>
  </div>

  <h3 class="forecast-title">7-Day Forecast</h3>

  <div class="forecast-grid">
    <% forecast.forEach(day => { %>
      <div class="forecast-card glass small-card">
        <div class="f-date"><%= day.date %></div>
        <img class="icon small" src="https:<%= day.day.condition.icon %>" alt="icon" />
        <div class="f-cond"><%= day.day.condition.text %></div>
        <div class="f-temps">
          <span>Max: <strong><%= day.day.maxtemp_c %>Â°C</strong></span>
          <span>Min: <strong><%= day.day.mintemp_c %>Â°C</strong></span>
        </div>
        <div>Rain: <strong><%= day.day.daily_chance_of_rain %>%</strong></div>
      </div>
    <% }) %>
  </div>

</section>

<!-- embed chart data for client -->
